<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme_Dark_Dialog">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/grey</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearence.TextInputLayout.Light.Hint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">16sp</item></style>
</resources>
