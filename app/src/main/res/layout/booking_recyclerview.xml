<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:background="#ffff"
    android:id="@+id/book_parent_layout"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="#ffff"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="@dimen/margin_12">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <TextView
            android:id="@+id/book_status"
            android:layout_width="112dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/service_name"
            android:layout_alignBottom="@+id/service_name"
            android:layout_alignParentEnd="true"
            android:text="@string/status"
            android:textColor="@color/green"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/booking_id"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/booking_id"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Booking id "
            android:textColor="@color/colorPrimaryDark" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/darker_gray"
            android:foregroundGravity="bottom" />

    </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>