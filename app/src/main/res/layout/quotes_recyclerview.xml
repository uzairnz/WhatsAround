<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="#ffff"
    android:id="@+id/parent_layout"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">



        <ImageView
            android:id="@+id/img_quote"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:src="@mipmap/ic_launcher_round"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:contentDescription="@string/todo" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/quote_Id"
                android:layout_width="112dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="@string/quote_ID"
                android:textColor="#000"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/quote_name"
                android:layout_width="112dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/quote_name"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quote_location"
                android:layout_width="112dp"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/quote_name"
                android:layout_below="@+id/quote_name"
                android:text="@string/service_location"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quote_category"
                android:layout_width="112dp"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/quote_location"
                android:layout_below="@+id/quote_location"
                android:text="@string/quote_category"
                android:textColor="#000"
                android:textStyle="bold" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/darker_gray"
                android:foregroundGravity="bottom" />

            <RatingBar
                android:id="@+id/ratingBar2"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/quote_category"
                android:layout_alignTop="@+id/Rating_num"
                android:numStars="4"
                android:rating="4" />

            <TextView
                android:id="@+id/Rating_num"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_18"
                android:layout_above="@+id/view2"
                android:layout_alignEnd="@+id/quote_category"
                android:layout_marginEnd="22dp"
                android:text="@string/_4"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/quote_price"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/ratingBar2"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/margin_4"
                android:text="@string/_999_00"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="@dimen/margin_20"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/ratingBar2"
                android:layout_toStartOf="@+id/quote_price"
                android:text="@string/rs"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView3" />

        </RelativeLayout>


</RelativeLayout>